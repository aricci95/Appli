<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link href="{{ asset('bundles/App/css/main.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/App/css/blablacar.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/App/css/appli.css') }}" rel="stylesheet" type="text/css">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/Growler/css/gritter.css') }}" />
        <title>{% block title %}BlaBlaTest - Antoine Ricci{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <script type="text/javascript" src="{{ asset('bundles/App/js/jquery-1.11.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/Growler/js/gritter.js') }}"></script>
        <script>
            $.extend($.gritter.options, {
                position: 'bottom-right'
            });
        </script>
        {% block javascripts %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="site-header" role="banner">
            <div class="container clearfix">
                <a href="/" class="logo">
                    <img src="https://d1ovtcjitiy70m.cloudfront.net/vi-1/images/blablacar-logo-290x48.png" width="145" height="24" alt="BlaBlaCar">
                </a>
            </div>
        </header>
        {% block growler %}
            {% if growler_messages is defined %}
                <script>
                    {% for growler_message in growler_messages %}
                        $(function(){
                            $.gritter.add({
                                text:  '{{ growler_message.message }}',
                                class_name : 'gritter-{{ growler_message.type }}'
                            });
                        });
                    {% endfor %}
                </script>
            {% endif %}
        {% endblock %}
        <div id="maincontent" class="container" role="main">
            <div class="flash-template alert no-icon hide clearfix" data-level-class="alert-LEVEL" data-message-selector=".flash-content"></div>
            <div class="search-in">
                <div class="trip-search-form search-form search-container">
                    By Antoine Ricci (aricci95@gmail.com)
                </div>
            </div>
            <div id="search-layout" class="row">
                <div class="span3">
                    <div id="search-facets" class="main-column form-container trip-search-facets clearfix">
                        <div class="main-column-block" data-tracker="seats-facet">
                    <span class="sprite ui-checkbox pull-left"></span>
                    <span class="facet-label">
                        <!-- MENU -->
                        <table>
                            <tr>
                                <th><a href="{{ url('default_homepage') }}">Index</a></th>
                            </tr>
                            <tr>
                                <th><a href="{{ url('default_list') }}">List</a></th>
                            </tr>
                            <tr>
                                <th><a href="{{ url('default_form') }}">Form</a></th>
                            </tr>
                        </table>
                    </span>
                </div>
                </div>
            </div>
                <div class="span9">
                    <div id="wrapper">
                        <div id="container">
                            <div id="welcome">
                                <h1>
                                    {% if title is defined %}
                                        {{ title }}
                                    {% endif %}
                                </h1>
                            </div>
                            <div id="content">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </body>
</html>
